    <!-- Features Section -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">Features</h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
          [
            "Three color variants: blue, green, and purple",
            "Dark mode support out of the box",
            "Tailwind CSS styling",
