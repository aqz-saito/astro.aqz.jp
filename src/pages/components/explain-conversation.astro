---
import Layout from "@/layouts/Layout.astro";
import Conversation from "@/components/Conversation.astro";
import { Code } from "astro-expressive-code/components";

const examples = [
  {
    title: "Basic Usage",
    code: `<Conversation>
  This is a basic conversation bubble.
</Conversation>`,
  },
  {
    title: "Color Variants",
    code: `<Conversation variant="blue">Blue theme</Conversation>
<Conversation variant="green">Green theme</Conversation>
<Conversation variant="purple">Purple theme</Conversation>`,
  },
];

const useCases = [
  {
    title: "Chat Messages",
    code: `<Conversation variant="blue">
  Hey there! How can I help you today?
</Conversation>
<Conversation variant="purple">
  I'd like to learn more about your services.
</Conversation>`,
  },
  {
    title: "Tips & Notifications",
    code: `<Conversation variant="green">
  Pro Tip: You can use keyboard shortcuts to navigate faster!
</Conversation>`,
  },
];

// Helper function to render conversation components
const renderConversation = (code: string) => {
  return code
    .split("\n")
    .map((line) => {
      if (!line.trim()) return null;
      return line.trim();
    })
    .filter(Boolean);
};
---

<Layout title="Conversation UI Component - Astro Components">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Component Header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold mb-4">Conversation UI Component</h1>
      <p class="text-gray-600 dark:text-gray-400 text-lg">
        A lightweight chat bubble component with dark mode support and multiple color variants.
